            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CompanyName">Nombre de la compañia</label>
                </div>
                <div class="col-8">
                    <input asp-for="CompanyName" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ContactName">Nombre de contacto</label>
                </div>
                <div class="col-8">
                    <input asp-for="ContactName" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ContactTitle">Titulo</label>
